"""Target platforms used for testing purposes."""

load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("//zig:toolchain.bzl", "zig_target_toolchain")
load(":defs.bzl", "empty_toolchain")

platform(
    name = "x86_64-linux",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
    ],
)

platform(
    name = "x86_64-linux-musl",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:x86_64",
        "//zig/platforms/abi:musl",
    ],
)

platform(
    name = "aarch64-linux",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:aarch64",
    ],
)

platform(
    name = "aarch64-linux-none",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:aarch64",
        "//zig/platforms/abi:none",
    ],
)

platform(
    name = "ppc-linux-musl",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:ppc",
        "//zig/platforms/abi:musl",
    ],
)

platform(
    name = "x86_64-windows",
    constraint_values = [
        "@platforms//os:windows",
        "@platforms//cpu:x86_64",
    ],
)

platform(
    name = "x86_64-windows-none",
    constraint_values = [
        "@platforms//os:windows",
        "@platforms//cpu:x86_64",
        "//zig/platforms/abi:none",
    ],
)

platform(
    name = "x86_64-windows-msvc",
    constraint_values = [
        "@platforms//os:windows",
        "@platforms//cpu:x86_64",
        "//zig/platforms/abi:msvc",
    ],
)

zig_target_toolchain(
    name = "x86_64-windows-msvc_target_toolchain",
    target = "x86_64-windows-msvc",
)

toolchain(
    name = "x86_64-windows-msvc_toolchain",
    target_compatible_with = [
        "@platforms//os:windows",
        "@platforms//cpu:x86_64",
        "//zig/platforms/abi:msvc",
    ],
    toolchain = ":x86_64-windows-msvc_target_toolchain",
    toolchain_type = "//zig/target:toolchain_type",
)

constraint_value(
    name = "zig-only-linux",
    constraint_setting = "@platforms//os",
)

constraint_value(
    name = "zig-only-x86_64",
    constraint_setting = "@platforms//cpu",
)

platform(
    name = "zig-only-x86_64-linux",
    constraint_values = [
        ":zig-only-linux",
        ":zig-only-x86_64",
    ],
)

zig_target_toolchain(
    name = "zig-only-x86_64-linux_target_toolchain",
    target = "zig-x86_64-linux",
)

toolchain(
    name = "zig-only-x86_64-linux_toolchain",
    target_compatible_with = [
        ":zig-only-linux",
        ":zig-only-x86_64",
    ],
    toolchain = ":zig-only-x86_64-linux_target_toolchain",
    toolchain_type = "//zig/target:toolchain_type",
)

empty_toolchain(name = "empty_toolchain")

toolchain(
    name = "unconstrained_default_test_toolchain",
    toolchain = ":empty_toolchain",
    toolchain_type = "@bazel_tools//tools/test:default_test_toolchain_type",
)

bzl_library(
    name = "defs",
    srcs = ["defs.bzl"],
    visibility = ["//visibility:public"],
)
