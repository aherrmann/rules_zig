load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")
load("@rules_zig//zig:defs.bzl", "zig_configure", "zig_library")

zig_library(
    name = "add",
    main = "add.zig",
)

# Transition build mode to avoid Zig debug symbols in the static library.
zig_configure(
    name = "add-small",
    actual = ":add",
    mode = "release_small",
)

cc_test(
    name = "add-test",
    size = "small",
    srcs = ["add-test.c"],
    deps = [":add-small"],
)

# Pass through a cc_library to explicitly test transitive CcInfo handling.
cc_library(
    name = "c-add",
    deps = [":add"],
)

zig_library(
    name = "mul",
    cdeps = [":c-add"],
    main = "mul.zig",
)

# See add-small above for reasoning.
zig_configure(
    name = "mul-small",
    actual = ":mul",
    mode = "release_small",
)

cc_test(
    name = "mul-test",
    size = "small",
    srcs = ["mul-test.c"],
    deps = [":mul-small"],
)
