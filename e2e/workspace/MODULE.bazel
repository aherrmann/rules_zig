local_path_override(
    module_name = "rules_zig",
    path = "../..",
)

zig = use_extension(
    "@rules_zig//zig:extensions.bzl",
    "zig",
    dev_dependency = True,
)
zig.toolchain(zig_version = "0.15.1")
